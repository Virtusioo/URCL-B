
//setup:
    BITS == 16
    MINSTACK 8192
    MINHEAP 8192
    @define bp r20

//data:
    dw [72,101,108,108,111,44,32,87,111,114,108,100,0]
    imm r25 13 // heap base

//runtime:
    cal .main 
    hlt 
.puts
    llod r1 sp 1 
    lod r2 r1 
    bre ~+4 r2 0 
    out %text r2 
    inc r1 r1 
    jmp ~-4 
    out %text 10 
    ret 
.main
    psh bp 
    mov bp sp 
    psh 0 
    cal .puts 
    add sp sp 1 
    mov sp bp 
    pop bp 
    ret 
